{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "plugins": [
    {
      "name": "@styled/typescript-styled-plugin",
      "lint": {
        "validProperties": [
          "aspect-ratio",
          "elevation",
          "margin-vertical",
          "margin-horizontal",
          "padding-horizontal",
          "padding-vertical",
          "resize-mode",
          "shadow-color",
          "shadow-opacity",
          "shadow-offset",
          "shadow-radius",
          "text-align-vertical",
          "tint-color",
          "label"
        ]
      }
    }
  ]
}
